{
  "$id": "https://schemas.camelz.io/Parameters.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Camelz Framework Parameters data file",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Parameter"
  },
  "definitions": {
    "Parameter": {
      "type": "object",
      "required": [ "ParameterKey", "ParameterValue" ],
      "properties": {
        "ParameterKey": {
          "type": "string",
          "description": "The Key of the Parameter.",
          "minLength": 2,
          "maxLength": 63,
          "pattern": "^([A-Z][a-z0-9]{0,63})*$"
        },
        "ParameterValue": {
          "type": "string",
          "description": "The Value of the Parameter."
        },
        "ParameterSource": {
          "type": "string",
          "description": "The Source of the Parameter.",
          "enum": [ "Template", "System", "Account", "Region", "Stack", "User", "Secure" ]
        }
      },
      "additionalProperties": false
    }
  }
}
