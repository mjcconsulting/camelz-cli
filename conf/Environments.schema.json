{
  "$id": "https://schemas.camelz.io/Environments.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Camelz Framework Environments data file",
  "type": "array",
  "items": {
    "$ref": "#/definitions/Environment"
  },
  "definitions": {
    "Environment": {
      "type": "object",
      "required": [ "Name", "Code" ],
      "properties": {
        "Name": {
          "type": "string",
          "description": "The Name of the Environment.",
          "enum": [ "Audit", "Build", "Core", "Development", "Example", "Identity", "Log", "Management", "NonProduction", "Organization", "Production", "QA", "Recovery", "Staging", "Testing", "UAT", "Experimental" ]
        },
        "Code": {
          "type": "string",
          "description": "The Code of the Environment.",
          "enum": [ "a", "b", "c", "d", "e", "i", "l", "m", "n", "o", "p", "q", "r", "s", "t", "u", "x" ]
        },
        "Active": {
          "type": "boolean",
          "description": "An optional flag to indicate the Environment is in use. Defaults to false."
        },
        "Default": {
          "type": "boolean",
          "description": "An optional flag to indicate the default Environment. Defaults to false. There should only be one Default Environment."
        },
        "Source": {
          "type": "string",
          "description": "The Source of the Environment.",
          "enum": [ "Default", "Common", "System", "Account", "Region", "User" ]
        }
      },
      "additionalProperties": false
    }
  }
}
